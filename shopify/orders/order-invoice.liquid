                                <td width="48%" align="right">
                                    <h3 style="text-align: right; font-weight: 600;">Discount:</h3>
                                </td>
                                <td width="4%" align="center"></td>
                                <td width="48%" align="left">
                                    <p style="font-size: 18px; line-height: 27px; text-align: left;">-{{
                                        discount_application.total_allocated_amount | money }}</p>
                                </td>
                            </tr>
                            {% endif %}
                            {% endfor %}
                            <tr>
                                <td align="right" width="48%"></td>
                                <td width="4%" align="center"></td>
                                <td align="left" width="48%">
                                    <p style="text-align: left;  font-size: 12px;">you saved <span
                                            class="total-discount--amount">{{ total_discounts | money }}</p>
                                </td>
                            </tr>
